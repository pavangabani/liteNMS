<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="Main" extends="json-default,struts-default">

        <action name="Login" class="com.motadata.kernel.action.Login" method="login">
            <result name="LOGIN" type="json"></result>
        </action>

        <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

        <action name="Load" class="com.motadata.kernel.action.Monitor" method="load">
            <result name="LOADED" type="json"></result>
        </action>
        <action name="Add" class="com.motadata.kernel.action.Monitor" method="add">
            <result name="ADDED" type="json"></result>
        </action>
        <action name="Run" class="com.motadata.kernel.action.Monitor" method="run">
            <result name="RUN" type="json"></result>
        </action>
        <action name="AddPolling" class="com.motadata.kernel.action.Monitor" method="addPolling">
            <result name="ADDED" type="json"></result>
        </action>
        <action name="Edit" class="com.motadata.kernel.action.Monitor" method="edit">
            <result name="EDITED" type="json"></result>
        </action>
        <action name="Delete" class="com.motadata.kernel.action.Monitor" method="delete">
            <result name="DELETED" type="json"></result>
        </action>

        <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

        <action name="LoadPolling" class="com.motadata.kernel.action.PollingMonitor" method="load">
            <result name="LOADED" type="json"></result>
        </action>


        <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

        <action name="Welcome">
            <result>WEB-INF/welcome.jsp</result>
        </action>
        <action name="Discovery">
            <result>WEB-INF/discovery.jsp</result>
        </action>
        <action name="Monitor">
            <result>WEB-INF/monitor.jsp</result>
        </action>
        <action name="Dashboard">
            <result>WEB-INF/dashboard.jsp</result>
        </action>
        <action name="Logout">
            <result>login.jsp</result>
        </action>
        <action name="LoginFail">
            <result>login.jsp</result>
        </action>

    </package>
</struts>